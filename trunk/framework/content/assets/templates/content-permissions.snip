{% load filters %}

{{ content.section|css:"content-permissions.css" }}
{{ content.section|yuijs:"yui/yui.js" }}
{{ content.section|js:"content-permissions.js" }}

{% captureas unique %}{{ content.unique_identifier }}{% endcaptureas %}
{% captureas path %}{% if content.section_path %}{{ content.section_path }}{% else %}{{ content.section.path }}{% endif %}{% endcaptureas %}

<div id="{{ unique }}" class="content-permissions yui3-menu yui3-menu-horizontal yui3-splitbuttonnav">
    <div class="yui3-menu-content">
        <ul>
            <li>
                <span class="yui3-menu-label">
                    <a href="#content-options-{{ unique }}">{{ content.name }}</a>
                    <a href="#content-options-{{ unique }}" class="yui3-menu-toggle">Content Options</a>
                </span>
                <div id="content-options-{{ unique }}" class="yui3-menu">
                    <div class="yui3-menu-content">
                        <ul>
                        	{% for action in allowed_actions %}<li class="yui3-menuitem"><a class="yui3-menuitem-content" href="/{{ path }}/{{ content.namespace }}/{{ action.0 }}">{{ action.1 }}</a></li>{% endfor %}
							{% if can_manage and container_namespace %}<li>
							    <a class="yui3-menu-label" href="#manage-{{ unique }}">Manage</a>
							    <div id="manage-{{ unique }}" class="yui3-menu">
							        <div class="yui3-menu-content">
							            <ul>
							                <li class="yui3-menuitem"><a class="yui3-menuitem-content" href="/{{ path }}/{{ container_namespace }}/reorder/{{ namespace }}">Reorder (under construction)</a>
							                <li class="yui3-menuitem"><a class="yui3-menuitem-content" href="/{{ path }}/{{ container_namespace }}/delete/{{ namespace }}">Delete (under construction)</a>
							            </ul>
							        </div>
							    </div>
							</li>{% endif %}
                        </ul>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>